{
  "name": "@assessment/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo",
    "db:setup": "pnpm db:setup:dev && pnpm db:setup:test",
    "db:setup:dev": "pnpm db:migrate && pnpm db:seed",
    "db:setup:test": "DATABASE_URL=postgresql://assessment:assessment@localhost:5432/assessment_test pnpm db:migrate && DATABASE_URL=postgresql://assessment:assessment@localhost:5432/assessment_test pnpm db:seed",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@assessment/schemas": "workspace:*",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.17.1",
    "dotenv": "^17.2.3",
    "nestjs-zod": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@chax-at/transactional-prisma-testing": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.6",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.37.0",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4"
  }
}
